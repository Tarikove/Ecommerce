@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bonjour @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit"class="dropdown-item">Deconnecter</button>
        </form>
    </li>
        
}
else
{
    <li class="nav-item">
            <a class="dropdown-item" asp-action="Create" asp-controller="Client">S'enregistrer</a>
    </li>
    <li class="nav-item">
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Connexion</a>
    </li>
        
}
</ul>

